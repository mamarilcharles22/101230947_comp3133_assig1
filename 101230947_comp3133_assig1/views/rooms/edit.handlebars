<section id="form-outside">
    <form method="POST" id="form" action="/room/edit/{{roomDocument._id}}/?_method=PUT" enctype="multipart/form-data">
        <h1>Edit Room</h1>
        {{#each messages}}
            <div class="error">
                {{this}}
            </div>
        {{/each}}

        <input class="input" type="text" name="title" value="{{roomDocument.title}}">
        <br>
        <input class="input" type="number" name="price" value="{{roomDocument.price}}">
        <br>
        <textarea class="input" name="description">{{roomDocument.description}}</textarea>
        <br>
        <input class="input" type="text" name="location" value="{{roomDocument.location}}">
        <br>
        <br>
        <div id="divButton">
            <input type="submit" id="findButton" value="Edit Room">
        </div>
    </form>
</section>
